<VBox xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.xm.msg.App" spacing="10" alignment="CENTER">

  <Label text="Message Management"/>
  
  <GridPane alignment="CENTER" hgap="10.0" vgap="10.0">
    <padding>
      <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
	</padding>
	
	<Label text="Name" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
	<TextField fx:id="username" GridPane.columnIndex="1" GridPane.rowIndex="0" />
	<Label text="Password" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
	<PasswordField fx:id="password" GridPane.columnIndex="1" GridPane.rowIndex="1" />
	<HBox alignment="bottom_right" GridPane.columnIndex="1" GridPane.rowIndex="2">
	  <Button fx:id="login" prefWidth="100" Text="Login" onAction="#onLogin"></Button>
	</HBox>

  </GridPane>
  
</VBox>

